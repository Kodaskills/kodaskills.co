---
import { Link, Logo, ThemeController } from "@components/atoms";
import { MainMenu } from "@components/molecules";
import { Icon } from "astro-icon/components";
---

<div class="navbar bg-base-100 shadow-sm px-17 fixed z-10">
  <div class="navbar-start">
    <Logo />
  </div>
  <div class="navbar-center hidden lg:flex">
    <MainMenu />
  </div>
  <div class="navbar-end">
    <Link href="https://linkedin.com" target="_blank" aria-label="LinkedIn">
      <Icon name="ri:linkedin-box-fill" class="w-8 h-8 mr-3">
    </Link>
    <div class="mr-3">
      <ThemeController />
    </div>
    <Link href="/contact" class="btn">Contact</Link>
  </div>
</div>