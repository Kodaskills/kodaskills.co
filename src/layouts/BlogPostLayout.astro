---
import Layout from "./Layout.astro"

//utils imports

import { formatDate } from "../ts/utils"

const { frontmatter } = Astro.props;

const { title, description, date, image } = frontmatter;

---
<Layout {title}>
  <header class="py-10">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl font-bold">{title}</h1>
      <p>{formatDate(date)}</p>
    </div>
    <img src="" alt="">
  </header>

  <div class="post-content flex gap-8 px-4 py-8 max-w-7xl mx-auto"> 
    <div class="content flex-1">
      <slot />
    </div>
    <div class="sidebar w-64 hidden lg:block"></div>
  </div>
</Layout>
